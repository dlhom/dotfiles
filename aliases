alias ..='cd .. && pwd'
alias rm='rm -i'
alias ll='ls -l'
alias vi='vim'
alias gows='cd ~/workspace && pwd'
alias gobk='cd ~/Books && pwd'
alias godesk='cd ~/Desktop && pwd'
alias reload='source ~/.bash_profile'

function title(){
  if [ $# -lt 1 ]; then
    echo "usage: title <title_name>"
  else
    echo -ne "\033]0;$@\007"
  fi
}

function shellshock(){
  env z="() { :; }; echo vulnerable" bash -c "echo foo"
}

